<h1>Listing comments</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Body</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project.comments.each do |comment| %>
  <tr>
    <td><%= comment.first_name %></td>
    <td><%= comment.last_name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.body %></td>
    <td><%= comment.project_id %></td>
    <td><%= link_to 'Show', project_comment_path(@project, comment) %></td>
    <td><%= link_to 'Edit', edit_project_comment_path(@project, comment) %></td>
    <td><%= link_to 'Destroy', [@project, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_project_comment_path(@project) %>